<% provide(:title, 'Sign up') %>

<h1>とうろく</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="row body_content">
    <div class="col-md-6 col-md-offset-3">

        <div class="field">
          <%= f.label :name, 'なまえ', class: "control-label " %>
          <%= f.text_field :name, autofocus: true, class: "form-control sign_textbox" %>
        </div>

        <div class="field">
          <%= f.label :email, 'めーる', class: "control-label" %>
          <%= f.email_field :email, autofocus: true, class: "form-control sign_textbox" %>
        </div>

        <div class="field">
          <%= f.label :password, 'ぱすわーど', class: "control-label" %>
          <% if @validatable %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "off", class: "form-control sign_textbox" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, 'ぱすわーどかくにん',class: "control-label" %>
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control sign_textbox" %>
        </div>
    </div>
  </div>

  <div class="row ">
    <div class="col-md-3 col-md-offset-3">
        <div class="actions">
          <%= f.submit "とうろく", class: "btn btn-lg btn-primary send_btn" %>
        </div>
    </div>
  </div>

<% end %>
